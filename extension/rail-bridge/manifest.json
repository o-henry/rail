{
  "manifest_version": 3,
  "name": "Rail Bridge Connector",
  "description": "Bridge extension for semi-automatic web AI prompt injection and response capture.",
  "version": "0.1.0",
  "permissions": ["storage", "tabs"],
  "host_permissions": [
    "http://127.0.0.1/*",
    "https://gemini.google.com/*",
    "https://chatgpt.com/*",
    "https://grok.com/*",
    "https://claude.ai/*",
    "https://www.perplexity.ai/*",
    "https://perplexity.ai/*"
  ],
  "action": {
    "default_title": "Rail Bridge",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://gemini.google.com/*",
        "https://chatgpt.com/*",
        "https://grok.com/*",
        "https://claude.ai/*",
        "https://www.perplexity.ai/*",
        "https://perplexity.ai/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "send-latest-response": {
      "description": "Send latest captured response to Rail",
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      }
    }
  }
}
