{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "rail",
    "version": "0.1.0",
    "identifier": "com.henry.rail",
    "build": {
        "beforeDevCommand": "npm run dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "npm run build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "",
                "width": 800,
                "height": 600,
                "minWidth": 1200,
                "minHeight": 760,
                "titleBarStyle": "Transparent",
                "hiddenTitle": true,
                "backgroundColor": "#33F6F6F6"
            }
        ],
        "security": {
            "csp": "default-src 'self'; base-uri 'self'; object-src 'none'; frame-ancestors 'none'; img-src 'self' data: blob: asset: https:; font-src 'self' data:; style-src 'self' 'unsafe-inline'; script-src 'self'; connect-src 'self' ipc: http://ipc.localhost https://chatgpt.com https://api.openai.com https://*.openai.com; frame-src https://chatgpt.com https://*.openai.com; form-action 'self' https://chatgpt.com https://*.openai.com"
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "resources": [
            "../scripts/web_worker/index.mjs"
        ],
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}
