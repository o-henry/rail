{
  "name": "rail",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:isolated": "RAIL_CODEX_HOME_MODE=isolated vite",
    "build": "tsc && vite build",
    "check:arch": "node scripts/check-architecture.mjs",
    "check:cycles": "node scripts/check-cycles.mjs",
    "test": "vitest run --passWithNoTests",
    "check": "npm run check:arch && npm run check:cycles && npm run build && npm run test",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:dev": "npm run tauri:dev:isolated",
    "tauri:dev:isolated": "RAIL_CODEX_HOME_MODE=isolated tauri dev",
    "tauri:dev:global": "RAIL_CODEX_HOME_MODE=global tauri dev",
    "dashboard:crawl": "cargo run --manifest-path src-tauri/Cargo.toml --bin dashboard_crawler -- --cwd ."
  },
  "dependencies": {
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-opener": "^2",
    "playwright-core": "^1.58.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "typescript": "~5.8.3",
    "vite": "^7.0.4",
    "vitest": "^4.0.18"
  }
}
